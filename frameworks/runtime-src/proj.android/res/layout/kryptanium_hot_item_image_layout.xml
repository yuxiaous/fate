<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_hot_item_image"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout 
    android:layout_width="@dimen/kryptanium_home_hot_image_item_layout_width"
    android:layout_height="fill_parent" >
    <com.ktplay.widget.NoClickStateImageView
        android:id="@+id/kryptanium_hot_item_image_bg"
        android:layout_width="@dimen/kryptanium_home_hot_image_item_bottom_layout_width"
        android:layout_height="fill_parent"
        
        android:background="@drawable/kryptanium_default_icon_image"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="@dimen/kryptanium_home_hot_image_item_bottom_layout_width"
        android:layout_height="@dimen/kryptanium_home_hot_image_item_bottom_layout_height"
		android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:adjustViewBounds="true"
        android:background="@color/kryptanium_image_creator_comment_background"
        android:paddingLeft="@dimen/kryptanium_home_hot_image_item_bottom_paddingLeft"
        android:paddingRight="@dimen/kryptanium_home_hot_image_item_bottom_layout_paddingRight" >

        <com.ktplay.widget.NoClickStateImageView
            android:id="@+id/kryptanium_hot_item_image_head"
            android:layout_width="@dimen/kryptanium_home_hot_image_item_bottom_image_width_height"
            android:layout_height="@dimen/kryptanium_home_hot_image_item_bottom_image_width_height"
            android:layout_centerVertical="true"
            android:background="@drawable/kryptanium_corner_bg_white"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/kryptanium_hot_item_image_msg"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/kryptanium_home_hot_image_item_bottom_text_marginTop"
            android:layout_toRightOf="@id/kryptanium_hot_item_image_head"
            android:maxLines="2"
            android:paddingLeft="@dimen/kryptanium_home_hot_image_item_bottom_text_paddingLeft"
            android:paddingBottom="@dimen/kryptanium_home_hot_image_item_bottom_text_paddingbottom"
            android:textColor="@color/kryptanium_solid_white"
            android:textSize="@dimen/kryptanium_text_size_small" />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>