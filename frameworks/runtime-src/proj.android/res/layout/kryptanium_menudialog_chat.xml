<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306dp"
    android:layout_height="50dp"
    android:background="@drawable/kryptanium_chat_more_bg" >
    <LinearLayout
        android:id="@+id/kryptanium_menudialog_long_click"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kryptanium_titlebar_line_height"
        android:background="@color/kryptanium_base_color_gray"
        android:orientation="horizontal" >
    </LinearLayout>

    <ListView
        android:id="@id/kryptanium_menu_dialog_item_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/kryptanium_menudialog_long_click"
        android:cacheColorHint="#00000000"
        android:divider="@color/kryptanium_barline_color"
        android:dividerHeight="0.1dp"
        android:scrollbars="none" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kryptanium_titlebar_line_height"
        android:layout_below="@+id/kryptanium_menu_dialog_item_list"
        android:background="@color/kryptanium_base_color_gray"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>