<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="17.5dp"
    android:paddingRight="17.5dp" >

    <TextView
        android:id="@+id/kryptanium_secure_authentication_failed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17.5dp"
        android:text="@string/kt_warning_security_verification_times"
        android:textColor="#000000"
        android:textSize="@dimen/kryptanium_text_size_medium" />

    <ImageView
        android:id="@+id/kryptanium_secure_authentication_failed_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_description"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:background="@drawable/kryptanium_icon_alert_failed" />

    <TextView
        android:id="@+id/kryptanium_secure_authentication_failed_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_imageview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/kt_security_verification_failure_times"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/kryptanium_secure_authentication_failed_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_textview"
        android:layout_marginTop="17.5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/kryptanium_secure_authentication_failed_again"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_button_content_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/kryptanium_colorbg_green"
            android:gravity="center"
            android:text="@string/kt_try_again"
            android:textColor="@color/kryptanium_text_white"
            android:textSize="@dimen/kryptanium_text_size_big" />

        <TextView
            android:id="@+id/kryptanium_secure_authentication_failed_backout"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/kt_skip_security_verification"
            android:textColor="@color/kryptanium_base_color_green" />
    </LinearLayout>

    <TextView
        android:id="@+id/kryptanium_secure_authentication_failed_other_user"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kryptanium_button_content_height"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_textview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17.5dp"
        android:background="@drawable/kryptanium_colorbg_green"
        android:gravity="center"
        android:text="@string/kt_login_with_other_accounts"
        android:textColor="@color/kryptanium_text_white"
        android:textSize="@dimen/kryptanium_text_size_big"
        android:visibility="gone" />

</RelativeLayout>