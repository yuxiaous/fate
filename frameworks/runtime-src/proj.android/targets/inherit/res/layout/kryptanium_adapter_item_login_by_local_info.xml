<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_login_by_local_info"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="@color/kryptanium_base_color_white"
    android:orientation="horizontal" >

    <!-- 选择框 -->

    <CheckBox
        android:layout_marginLeft="17.5dp"
        android:id="@+id/kryptanium_login_check"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/kryptanium_checkbox_circle"
        android:button="@null"
        android:checked="true"
        android:clickable="false"
        android:defaultValue="true" />

    <!-- 头像 -->

    <ImageView
        android:id="@+id/kryptanium_login_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY" />

    <!-- 用户昵称 -->

    <TextView
        android:id="@+id/kryptanium_login_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginLeft="12.5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/kryptanium_text_dark"
        android:textSize="@dimen/kryptanium_text_size_big" />

</LinearLayout>