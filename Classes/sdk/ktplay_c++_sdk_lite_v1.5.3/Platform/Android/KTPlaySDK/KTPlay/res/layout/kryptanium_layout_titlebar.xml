<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="38.5dp"
        android:paddingBottom="@dimen/kryptanium_title_layout_padding"
        android:paddingLeft="@dimen/kryptanium_layout_paddingLeft"
        android:paddingRight="@dimen/kryptanium_layout_paddingRight"
        android:paddingTop="@dimen/kryptanium_title_layout_padding" >

        <!-- dxh -->

        <LinearLayout
            android:id="@+id/kryptanium_titlebar_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/kryptanium_titlebar_left"
                    style="@style/kryptanium_textview_2_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/kryptanium_titlebar_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="@string/s_kt_back"
                    android:textColor="@color/kryptanium_text_blue"
                    android:textSize="@dimen/kryptanium_text_size_standard"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/kryptanium_flag_caution_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="55dp"
            android:background="@drawable/kryptanium_title_pro"
            android:gravity="center"
            android:text="@string/s_kt_profile_complete_setting"
            android:textColor="@color/kryptanium_text_white"
            android:textSize="@dimen/kryptanium_user_profile_mid"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/kryptanium_titlebar_right"
            style="@style/kryptanium_textview_2_button"
            android:layout_width="@dimen/kryptanium_title_button_width"
            android:layout_height="@dimen/kryptanium_title_button_height"
            android:layout_gravity="right|center_vertical"
            android:background="@null"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/kryptanium_titlebar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/kryptanium_text_blue"
            android:textSize="@dimen/kryptanium_text_size_standard"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/kryptanium_titlebar_own"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/kryptanium_titlebar_own_left"
                    android:layout_width="@dimen/kryptanium_titlebar_right_wh"
                    android:layout_height="@dimen/kryptanium_titlebar_right_th"
                    android:background="@drawable/kryptanium_own_title_button_left"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/kryptanium_titlebar_own_right"
                    android:layout_width="@dimen/kryptanium_titlebar_right_wh"
                    android:layout_height="@dimen/kryptanium_titlebar_right_th"
                    android:background="@drawable/kryptanium_own_title_button_right"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/kryptanium_titlebar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/kryptanium_spacing"
            android:paddingRight="@dimen/kryptanium_spacing"
            android:textColor="@color/kryptanium_text_black"
            android:textSize="@dimen/kryptanium_fontsize_middle" />
    </FrameLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kryptanium_titlebar_line_height"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@color/kryptanium_barline_color" />

</LinearLayout>