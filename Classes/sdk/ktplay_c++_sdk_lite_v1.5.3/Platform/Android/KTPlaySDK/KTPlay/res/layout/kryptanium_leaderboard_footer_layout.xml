<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/kryptanium_leaderboard_footer_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/kryptanium_title_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/kryptanium_leaderboard_friend_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/kryptanium_title_bg"
            android:paddingLeft="5dp"
            android:text="@string/s_kt_friends_invite_other_friends_to_play"
            android:textColor="@color/kryptanium_text_dark_gray"
            android:textSize="@dimen/kryptanium_fontsize_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kryptanium_leaderboard_footer_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_leaderboard_footer_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kryptanium_default_gap_half"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kryptanium_leaderboard_footer_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_leaderboard_footer_other"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kryptanium_default_gap_half"
        android:orientation="horizontal"
        android:padding="@dimen/kryptanium_default_gap_half_2x" >

        <ImageView
            android:id="@+id/type_image"
            android:layout_width="@dimen/kryptanium_head_wh_small"
            android:layout_height="@dimen/kryptanium_head_wh_small"
            android:background="@drawable/kryptanium_colorbg_green"
            android:padding="@dimen/kryptanium_buttom_icon_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/kryptanium_button_to_addfriend_page" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_login_edit_height"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/type_name"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/kryptanium_user_login_edit_height"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/s_kt_add_friends"
                android:textColor="@color/kryptanium_text_dark"
                android:textSize="@dimen/kryptanium_fontsize_big" />

            <ImageView
                android:id="@+id/is_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:src="@drawable/kryptanium_read_content_bt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kryptanium_leaderboard_footer_next_page"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        android:layout_below="@+id/kryptanium_leaderboard_footer_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kryptanium_default_gap_half"
        android:orientation="horizontal"
        android:padding="@dimen/kryptanium_default_gap_half_2x" >

        <TextView
            android:id="@+id/type_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000"
            android:gravity="center"
            android:text="下一页"
            android:textColor="@color/kryptanium_text_dark"
            android:textSize="@dimen/kryptanium_fontsize_big" />
    </LinearLayout>

</RelativeLayout>