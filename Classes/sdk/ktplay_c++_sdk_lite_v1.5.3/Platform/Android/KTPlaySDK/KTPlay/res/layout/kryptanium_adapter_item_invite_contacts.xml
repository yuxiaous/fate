<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="46dp"
    android:background="@color/kryptanium_base_color_white"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="6dp" >

    <!-- 用户昵称 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/kryptanium_invite_contact_status_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/kryptanium_invite_contact_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/kryptanium_text_dark"
            android:textSize="@dimen/kryptanium_text_size_medium" />

        <TextView
            android:id="@+id/kryptanium_invite_contact_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/kryptanium_text_dark_gray"
            android:textSize="@dimen/kryptanium_text_size_small" />
    </LinearLayout>

    <!-- 发送状态 -->

    <LinearLayout
        android:id="@+id/kryptanium_invite_contact_status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/kryptanium_invite_contact_status"
            android:layout_width="@dimen/kryptanium_msgbox_item_textview_down_width"
            android:layout_height="@dimen/kryptanium_msgbox_item_textview_down_height"
            android:background="#00000000"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/s_kt_contacts_friends_invite"
            android:textColor="@color/kryptanium_text_blue"
            android:textSize="@dimen/kryptanium_text_size_standard" />
    </LinearLayout>

</RelativeLayout>