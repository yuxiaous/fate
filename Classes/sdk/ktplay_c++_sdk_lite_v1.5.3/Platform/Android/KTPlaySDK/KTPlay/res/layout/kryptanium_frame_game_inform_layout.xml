<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
<RelativeLayout
            android:id="@+id/kryptanium_frame_game_inform"
            android:layout_width="@dimen/kryptanium_frame_wh"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/kryptanium_default_gap"
            android:layout_marginRight="@dimen/kryptanium_default_gap"
            android:layout_marginBottom="@dimen/kryptanium_frame_game_inform_h"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/kryptanium_buttom_menu_dialog_pandding_top"
            android:paddingLeft="@dimen/kryptanium_buttom_menu_dialog_pandding"
            android:paddingRight="@dimen/kryptanium_buttom_menu_dialog_pandding"
            android:paddingBottom="@dimen/kryptanium_buttom_menu_dialog_pandding"
            android:background="@drawable/kryptanium_game_inform_bg">

            <com.ktplay.widget.StateImageView
                android:id="@+id/kryptanium_frame_game_inform_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:background="@null"
                
                android:layout_marginRight="@dimen/kryptanium_default_gap"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/kryptanium_default_gap"
                android:layout_toLeftOf="@+id/kryptanium_frame_game_inform_close"
                android:layout_toRightOf="@+id/kryptanium_frame_game_inform_icon"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/kryptanium_frame_game_inform_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/kryptanium_base_color_white"
                    android:textSize="@dimen/kryptanium_fontsize_middle" />

                <TextView
                    android:id="@+id/kryptanium_frame_game_inform_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/kryptanium_base_color_white"
                    android:textSize="@dimen/kryptanium_fontsize_small" />

                <TextView
                    android:id="@+id/kryptanium_frame_game_inform_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/s_kt_details"
                    android:textColor="@color/kryptanium_base_color_white"
                    android:textSize="@dimen/kryptanium_fontsize_small" />
            </LinearLayout>

            <com.ktplay.widget.StateImageView
                android:id="@+id/kryptanium_frame_game_inform_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/kryptanium_game_inform_close" />
        </RelativeLayout>
</RelativeLayout>