<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_friend_kt_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/kryptanium_friend_kt_item_layout_height"
    style="@style/kryptanium_style_item_touch"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/kryptanium_msgbox_item_linealayout_padding_left_right"
    android:paddingTop="6dp" >

    <ImageView
        android:id="@+id/kryptanium_leaderboard_add_friend"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!--
        <CheckBox
        android:enabled="false"
        android:id="@+id/kryptanium_leaderboard_add_friend1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/kryptanium_checkbox_circle"
        android:button="@null"
        android:visibility="gone" />
    -->

    <ImageView
        android:id="@+id/kryptanium_friend_invite_flag"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/kryptanium_flag_friend_invite_normal"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/kryptanium_leaderboard_friend_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_toLeftOf="@+id/kryptanium_friend_kt_invite_finish_layout"
        android:layout_toRightOf="@+id/kryptanium_friend_invite_flag"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/kryptanium_leaderboard_friend_info_hand_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@null"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/kryptanium_leaderboard_friend_info_nickname"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_login_edit_height"
            android:layout_weight="1"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/kryptanium_text_dark"
            android:textSize="@dimen/kryptanium_text_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kryptanium_leaderboard_friend_played_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toLeftOf="@+id/kryptanium_leaderboard_add_friend"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kryptanium_friend_kt_invite_finish_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/kryptanium_friend_kt_invite_finish"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kryptanium_title_buttom_h"
            android:layout_marginRight="8dp"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="@dimen/kryptanium_buttom_icon_padding"
            android:singleLine="true"
            android:text="@string/s_kt_friend_invite_finish"
            android:textColor="@color/kryptanium_text_dark"
            android:textSize="@dimen/kryptanium_fontsize_middle"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>