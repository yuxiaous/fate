<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/kryptanium_default_gap_half_2x"
    android:paddingRight="@dimen/kryptanium_default_gap_half_2x"
    android:paddingTop="@dimen/kryptanium_default_gap"
    android:paddingBottom="@dimen/kryptanium_default_gap"  >

    <TextView
        android:id="@+id/kryptanium_leaderboard_number"
        android:layout_width="@dimen/kryptanium_head_wh_small"
        android:layout_height="@dimen/kryptanium_head_wh_small"
        android:background="#00000000"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/kryptanium_text_dark"
        android:textSize="@dimen/kryptanium_fontsize_big" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toLeftOf="@+id/kryptanium_leaderboard_score"
        android:layout_toRightOf="@+id/kryptanium_leaderboard_number"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/kryptanium_leaderboard_head_image"
            android:layout_width="@dimen/kryptanium_head_wh_small"
            android:layout_height="@dimen/kryptanium_head_wh_small"
            android:background="@null"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/kryptanium_leaderboard_nickname"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_login_edit_height"
            android:layout_weight="1"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/kryptanium_default_gap"
            android:singleLine="true"
            android:text="@string/s_kt_share_to_sina"
            android:textColor="@color/kryptanium_text_dark"
            android:textSize="@dimen/kryptanium_fontsize_big" />
    </LinearLayout>

    <TextView
        android:id="@+id/kryptanium_leaderboard_score"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/kryptanium_default_gap"
        android:paddingRight="@dimen/kryptanium_default_gap"
        android:singleLine="true"
        android:text="@string/s_kt_share_to_sina"
        android:textColor="@color/kryptanium_text_dark"
        android:textSize="@dimen/kryptanium_fontsize_big" />

</RelativeLayout>