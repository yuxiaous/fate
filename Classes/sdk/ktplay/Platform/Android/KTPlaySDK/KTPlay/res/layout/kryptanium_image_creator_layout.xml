<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"        android:layout_marginTop="@dimen/kryptanium_default_gap_2x"
            android:layout_height="fill_parent"
     android:background="@color/kryptanium_image_creator_comment_background"
    android:padding="@dimen/kryptanium_spacing_big"
    >
    <ImageView
         android:id="@+id/kryptanium_image_author_avatar"
         android:layout_marginTop="@dimen/kryptanium_default_gap_2x"
         android:layout_width="@dimen/kryptanium_head_wh_small" android:layout_height="@dimen/kryptanium_head_wh_small"
		 android:scaleType="fitXY"
		 android:background="@drawable/kryptanium_corner_bg_white"
         android:contentDescription="@null"
        />
    <LinearLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/kryptanium_image_author_avatar"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/kryptanium_default_gap_2x"
        android:layout_marginLeft="@dimen/kryptanium_spacing"
        >
		<RelativeLayout
    		android:layout_width="fill_parent" android:layout_height="wrap_content"
   		>
		    <TextView
		         android:id="@+id/kryptanium_image_author_name"
		         android:layout_width="wrap_content" android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:ellipsize="end"
		         android:maxWidth="@dimen/kryptanium_img_detail_limit"
                 android:singleLine="true"
		         android:textColor="@color/kryptanium_text_white"
		         android:textSize="@dimen/kryptanium_fontsize_small"
		        />
		    <TextView
		         android:id="@+id/kryptanium_image_publishtime"
		         android:layout_width="wrap_content" android:layout_height="wrap_content"
		         android:layout_alignParentRight="true"
		         android:gravity="right"
		         android:textColor="@color/kryptanium_text_white"
		         android:textSize="@dimen/kryptanium_fontsize_small"
		    />
	    </RelativeLayout>
	    
		<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
		    android:layout_marginTop="@dimen/kryptanium_default_gap"
		    android:fadingEdge="none"
		    android:scrollbars="none"
		    >
			<TextView
		         android:id="@+id/kryptanium_image_description"
		         android:layout_width="wrap_content" android:layout_height="wrap_content"
		         android:textColor="@color/kryptanium_text_white"
			     android:textSize="@dimen/kryptanium_fontsize_big"
	        />
		</ScrollView>
		

    </LinearLayout>

    
    
</RelativeLayout>