<?xml version="1.0" encoding="utf-8"?>

<!-- 登录界面首页 -不包含SNS的情况 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kryptanium_base_color_white" >

    <!-- 内容区 -->
    <FrameLayout
        android:layout_width="@dimen/kryptanium_login_content_width"
        android:layout_height="240dp"
        android:layout_gravity="center"
        >
        
        <!-- KTplay LOGO -->
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="top" 
            android:orientation="vertical" 
             >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/kryptanium_icon_ktplay"
            />
        
         <!-- KTplay Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/s_kt_ktplay_title"
            android:textSize="@dimen/kryptanium_fontsize_large"
            android:textColor="@color/kryptanium_base_color_black"
            android:layout_marginTop="8dp"
             />
        </LinearLayout>
      
        
         <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:orientation="vertical" 
             >
        <!-- 标题-立即加入 -->
        <FrameLayout 
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            >
            <View 
            style="@style/kryptanium_seperate_line"
            android:layout_gravity="center_vertical"
                />
            <TextView 
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_gravity="center"
            		android:paddingLeft="8dp"
            		android:paddingRight="8dp"
            		android:background="@color/kryptanium_base_color_white"
            		android:text="@string/s_kt_join_now"
                />
        </FrameLayout>
        
        <!-- 注册按钮 -->
        <TextView
            android:id="@+id/kryptanium_login_landing_register"
            android:layout_width="fill_parent" 
            style="@style/kryptanium_button_style_main"
            android:text="@string/s_kt_register"
            android:layout_marginTop="8dp"
            />
         </LinearLayout>
        
        <!-- 登录链接 -->
        <TextView
             android:id="@+id/kryptanium_login_landing_loginlink" 
             style="@style/kryptanium_link_text"
             android:text="@string/s_kt_login_now"
             android:layout_gravity="center_horizontal|bottom"
            />
		
    </FrameLayout>

</FrameLayout>