<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/kryptanium_default_gap_half_2x">
    <TextView
        android:id="@+id/kryptanium_leaderboard_number"
        android:layout_width="50dp"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        
        android:background="#00000000"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/kryptanium_text_dark"
        android:textSize="@dimen/kryptanium_fontsize_big" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/kryptanium_leaderboard_number"
        android:layout_toLeftOf="@+id/kryptanium_leaderboard_count"
        android:orientation="horizontal"
         >

        <ImageView
            android:id="@+id/type_image"
            android:layout_width="@dimen/kryptanium_head_wh_small"
            android:layout_height="@dimen/kryptanium_head_wh_small"
            android:background="@null"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/type_name"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_login_edit_height"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/s_kt_share_to_sina"
            android:textColor="@color/kryptanium_text_dark"
            android:textSize="@dimen/kryptanium_fontsize_big" />
    </LinearLayout>

    <TextView
        android:id="@+id/kryptanium_leaderboard_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/s_kt_share_to_sina"
        android:textColor="@color/kryptanium_text_dark"
        android:textSize="@dimen/kryptanium_fontsize_big" />

</RelativeLayout>