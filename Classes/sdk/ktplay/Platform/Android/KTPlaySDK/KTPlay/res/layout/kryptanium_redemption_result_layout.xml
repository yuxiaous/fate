<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/kryptanium_redemption_line"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/kryptanium_redemption_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/kryptanium_barline_color"
            android:dividerHeight="0.5dp"
            android:fadingEdge="none"
            android:listSelector="#00000000" />

        <ImageView
            android:id="@+id/kryptanium_redemption_listview_alpha"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#aaffffff" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/kryptanium_redemption_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kryptanium_titlebar_line_height"
        android:layout_above="@+id/kryptanium_redemption_foot_button"
        android:background="@color/kryptanium_barline_color"
        android:paddingLeft="@dimen/kryptanium_layout_paddingLeft"
        android:scaleType="fitXY" />

    <FrameLayout
        android:id="@+id/kryptanium_redemption_foot_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/kryptanium_colorbg_white_alpha"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/kryptanium_redemption_confirm"
            android:layout_width="@dimen/kryptanium_button_content_width"
            android:layout_height="@dimen/kryptanium_button_content_height"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/kryptanium_button_bg"
            android:gravity="center"
            android:text="@string/kt_confirm"
            android:textColor="@color/kryptanium_text_white"
            android:textSize="@dimen/kryptanium_text_size_big" />
    </FrameLayout>

</RelativeLayout>